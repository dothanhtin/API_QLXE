<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="file" xsi:type="File" layout="${longdate}|${threadid}|${level}|${message}"
            fileName="D:/Logging/QLXE/_ServiceLogs/${date:format=yyyy}${date:format=MM}${date:format=dd}/${logger}.txt"
            archiveFileName="D:/Logging/42/archives/log.{#####}.txt" archiveAboveSize="10240000"
            archiveNumbering="Sequence" concurrentWrites="true" keepFileOpen="false" encoding="utf-8" />

    <!--<target name="file1" xsi:type="File" layout="${longdate}|${threadid}|${level}|${message}"
            fileName="${basedir}/_ServiceLogs/${date:format=yyyy}${date:format=MM}${date:format=dd}/Errors/${logger}.txt"
            archiveFileName="${basedir}/archives/Error/log.{#####}.txt" archiveAboveSize="10240000"
            archiveNumbering="Sequence" concurrentWrites="true" keepFileOpen="false" encoding="utf-8" />-->
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="file" />
    <!--<logger name="*" minlevel="Error" writeTo="file1" />-->
  </rules>
</nlog>